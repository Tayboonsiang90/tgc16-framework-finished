{{#extends 'base'}}

{{#block "content"}}
<h1>Our Products</h1>

    <form method="GET">
        {{{searchForm}}}
        <input type="submit" class="btn btn-primary mt-3"/>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Cost</th>
                <th>Category</th>
                <th>Tags</th>
                <th>Image</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>{{this.cost}}</td>
                <td>{{this.category.name}}</td>
                <td>
                    {{#each this.tags}}
                    <span class="badge bg-primary">{{this.name}}</span>
                    {{/each}}
                </td>
                <td>
                    {{#if this.image_url}}
                        <img src="{{this.image_url}}" class="img-fluid"/>
                    {{/if}}
                </td>
                    
                <td>
                    <a class="btn btn-primary btn-sm" href="/products/{{this.id}}/update">Update</a>
                    <a class="btn btn-danger btn-sm" href="/products/{{this.id}}/delete">Delete</a>
                </td>
            </tr>
            {{/each}}

        </tbody>
    </table>

{{/block}}
{{/extends}}