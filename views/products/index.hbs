{{#extends 'base'}}

{{#block "content"}}
<h1>Our Products</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Cost</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>{{this.cost}}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/products/{{this.id}}/update">Update</a>
                    <a class="btn btn-danger btn-sm" href="/products/{{this.id}}/delete">Delete</a>
                </td>
            </tr>
            {{/each}}

        </tbody>
    </table>

{{/block}}
{{/extends}}